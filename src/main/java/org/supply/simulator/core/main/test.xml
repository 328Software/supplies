<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>


    <bean id="main" class="org.supply.simulator.core.main.Main" autowire="byName"/>

    <bean id="beanDip" class="org.supply.simulator.core.main.Main.SomeBean">
        <property name="usefulNumber" value="#{new Integer(11)}"/>
        <property name="id" value="RALPH"/>
        <property name="bigData" value="#{1.41}"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="main"/>
        <property name="targetMethod" value="setTestString"/>
        <property name="arguments">
            <list>
                <value>hello brandon you are awesome</value>
            </list>
        </property>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="main"/>
        <property name="targetMethod" value="setMyStaticBean"/>
        <property name="arguments">
            <list>
                <ref bean="beanDip"/>
            </list>
        </property>
    </bean>
</beans>