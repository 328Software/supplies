<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <typedef class="org.supply.simulator.core.dao.usertype.ChunkColorType" name="chunkColor"/>
    <typedef class="org.supply.simulator.core.dao.usertype.ChunkPositionType" name="chunkPosition"/>

    <class name="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" table="chunk_data">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="rows" column="rows" type="int"/>
        <property name="columns" column="columns" type="int"/>
        <property name="rowIndex" column="row_index" type="int"/>
        <property name="columnIndex" column="column_index" type="int"/>

        <property name="colors" column="colors" type="chunkColor" length="10000"/>
        <property name="positions" column="positions" type="chunkPosition" length="40000"/>
    </class>

    <class name="org.supply.simulator.display.manager.chunk.impl.BasicChunk" table="chunk">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <one-to-one name="data" class="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" cascade="save-update"/>
    </class>
</hibernate-mapping>