<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" table="CHUNK">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="colors" column="colors" type="string"/>
        <property name="positions" column="positions" type="string"/>
        <property name="indices" column="indices" type="int"/>
    </class>
</hibernate-mapping>