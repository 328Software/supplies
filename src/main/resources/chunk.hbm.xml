<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" table="chunk_data">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="rowIndex" column="row_index" type="int"/>
        <property name="columnIndex" column="column_index" type="int"/>

        <list name="colors">
            <key column="chunk_data_id"/>
            <list-index column="idx"/>
            <element type="byte"/>
        </list>
        <list name="positions">
            <key column="chunk_data_id"/>
            <list-index column="idx"/>
            <element type="float"/>
        </list>
        <list name="indices">
            <key column="chunk_data_id"/>
            <list-index column="idx"/>
            <element type="int"/>
        </list>
    </class>

    <class name="org.supply.simulator.display.manager.chunk.impl.BasicChunk" table="chunk">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <one-to-one name="data" class="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" cascade="save-update"/>
    </class>
</hibernate-mapping>