<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-cascade="save-update">
    <typedef class="org.supply.simulator.core.dao.usertype.ChunkColorType" name="chunkColor"/>
    <typedef class="org.supply.simulator.core.dao.usertype.ChunkPositionType" name="chunkPosition"/>

    <class name="org.supply.simulator.data.statistic.entity.impl.ChunkColors" table="chunk_colors">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="rowIndex" column="row_index" type="int"/>
        <property name="columnIndex" column="column_index" type="int"/>

        <property name="value" column="positions" type="chunkPosition" length="160000"/>
    </class>

    <class name="org.supply.simulator.data.statistic.entity.impl.ChunkPositions" table="chunk_positions">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="rowIndex" column="row_index" type="int"/>
        <property name="columnIndex" column="column_index" type="int"/>

        <property name="value" column="colors" type="chunkColor" length="40000"/>
    </class>

    <class name="org.supply.simulator.data.entity.impl.Chunk" table="chunk">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <one-to-one name="data" class="org.supply.simulator.display.manager.chunk.impl.BasicChunkData" cascade="save-update"/>
        <many-to-one name="chunkType" column="chunk_type_id" class="org.supply.simulator.display.manager.chunk.impl.BasicChunkType" cascade="save-update"/>
    </class>

    <class name="org.supply.simulator.data.attribute.entity.impl.ChunkType" table="chunk_type" lazy="false">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="rows" column="rows" type="int"/>
        <property name="columns" column="columns" type="int"/>
    </class>
</hibernate-mapping>